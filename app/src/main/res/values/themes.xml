<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApnaTutor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="actionBarTheme">@style/Theme.ApnaTutor.Actionbar</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="backgroundColor">@color/background_color</item>
    </style>
    <style name="Theme.ApnaTutor.Actionbar" parent="Theme.MaterialComponents.Light">
        <item name="android:background">?attr/backgroundColor</item>
    </style>
</resources>